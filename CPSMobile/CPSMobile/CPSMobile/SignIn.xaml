<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CPSMobile.SignIn">
    <StackLayout>
        <Image Source="logo.PNG"/>
        <!--<Image Source="D:\GitHub\ComfortProfiles\CPSMobile\CPSMobile\CPSMobile\logo.PNG"></Image>-->
        <StackLayout VerticalOptions="FillAndExpand" Margin="0, 140, 0, 0">
            <Label x:Name="EmailLabel" FontSize="Medium" />
            <Entry x:Name="Email" Margin="20, 0, 20, 0" Placeholder = "Email"/>
            <Label x:Name="PasswordLabel" FontSize="Medium"/>
            <Entry x:Name="Password" Margin="20, 0, 20, 0" Placeholder = "Password" IsPassword ="True" />
            <Button Text="Sign in" FontSize="Medium"  Clicked="SignInAction" Margin="110, 25, 110, 0" TextColor="White" HeightRequest="45" BorderColor="#FACD05" BorderRadius = "17" BackgroundColor="#FACD05"></Button>
        </StackLayout>
        <Button Text="Sign Up" BackgroundColor="#C4DFF3" FontAttributes="Bold" TextColor="#4E7CC7" FontSize="Medium" Clicked="OpenSignUp" VerticalOptions="End" HorizontalOptions="FillAndExpand" HeightRequest="50" Margin="0"></Button>
    </StackLayout>
</ContentPage>