<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CPSMobile.SignIn">
    <StackLayout>
        <StackLayout VerticalOptions="FillAndExpand">
            <Label x:Name="EmailLabel" FontSize="Medium" />
            <Entry x:Name="Email" Placeholder = "Email"/>
            <Label x:Name="PasswordLabel" FontSize="Medium"/>
            <Entry x:Name="Password" Placeholder = "Password" IsPassword ="True" />
            <Button Text="Sign in" FontSize="Medium" Clicked="SignInAction"></Button>
        </StackLayout>
        <StackLayout Orientation="Horizontal" VerticalOptions="End">
            <Button Text="Sign In" FontSize="Medium" Clicked="OpenSignIn" HorizontalOptions="FillAndExpand" HeightRequest="50"></Button>
            <Button Text="Sign Up" FontSize="Medium" Clicked="OpenSignUp" HorizontalOptions="FillAndExpand" HeightRequest="50"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>