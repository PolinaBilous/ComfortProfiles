<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CPSMobile.ChangeIllumination"
             Title="Change illumination in your room">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Select light state" FontSize="Medium"/>
            <Picker Title="Select light state" 
                    x:Name="IsLight"
                    ItemDisplayBinding="{Binding StringValue}"/>

            <Label Text="Select light intensity" FontSize="Medium"/>
            <Picker Title="Select light intensity" 
                    x:Name="LightIntensity"
                    ItemDisplayBinding="{Binding StringValue}"/>

            <Label Text="Select date" FontSize="Medium"/>
            <DatePicker x:Name ="Date" MinimumDate="{Binding minimumDate}"></DatePicker>

            <Label Text="Select time" FontSize="Medium"/>
            <TimePicker x:Name="Time"></TimePicker>

            <Label Text="Is action repeatable?" FontSize="Medium"/>
            <Picker Title="Is repeatable?" 
                    x:Name="IsRepeatable"
                    ItemDisplayBinding="{Binding Explanation}"/>

            <Button Text="Submit" Clicked="SubmitChangeIllumination"></Button>

            <Label></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>