<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CPSMobile.BoilWater">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Select temperature" FontSize="Medium"/>
            <Slider Minimum="0" 
                    Maximum="100"
                    x:Name="Temperature"></Slider>
            <Label Text="Selected temperature:"
                   x:Name="SelectedTemperature"></Label>
            <Label Text="Select date" FontSize="Medium"/>
            <DatePicker x:Name ="Date" MinimumDate="{Binding minimumDate}"></DatePicker>

            <Label Text="Select time" FontSize="Medium"/>
            <TimePicker x:Name="Time"></TimePicker>

            <Label Text="Is action repeatable?" FontSize="Medium"/>
            <Picker Title="Is repeatable?" 
                    x:Name="IsRepeatable"
                    ItemDisplayBinding="{Binding Explanation}"/>

            <Button Text="Submit" Clicked="Submit"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>