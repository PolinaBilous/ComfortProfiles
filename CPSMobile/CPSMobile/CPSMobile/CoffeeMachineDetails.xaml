<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CPSMobile.CoffeeMachineDetails"
             Title="Coffee Machine">
    <StackLayout>
        <Label Text="Current coffee amount: "></Label>
        <Slider Minimum="0" 
                Maximum="100"
                x:Name="Coffee"
                ThumbColor="Brown"
                IsEnabled="False"></Slider>
        <Label Text="Current water amount: "></Label>
        <Slider Minimum="0" 
                Maximum="100"
                x:Name="Water"
                HeightRequest="30"
                IsEnabled="False"
                ThumbColor="#B3D4E5"></Slider>
        <Label Text="Current milk amount: "></Label>
        <Slider Minimum="0" 
                Maximum="100"
                x:Name="Milk"
                WidthRequest="30"
                ThumbColor="#CFCFCF"
                IsEnabled="False"></Slider>

        <Button Text="Make coffee"
                Clicked="MakeCoffee"></Button>
    </StackLayout>
</ContentPage>